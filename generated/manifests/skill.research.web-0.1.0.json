{
  "$schema": "./skill_manifest_schema_v2.0.0.json",
  "manifestApiVersion": "v2.0.0",
  "manifestId": "skill.research.web@0.1.0",
  "skillName": "research.web",
  "skillVersion": "0.1.0",
  "description": "Lightweight web research capability",
  "tags": [
    "research",
    "web"
  ],
  "permissions": {
    "egress": "internet",
    "secrets": [
      "BING_API_KEY"
    ]
  },
  "skillDirectives": "Follow queries precisely.\nExtract key facts from search results.\nProvide citations with source URLs.\nWhen fetching pages, focus on relevant content sections.\n",
  "tools": [
    {
      "definition": {
        "type": "mcp_server",
        "serverId": "search",
        "toolName": "search_query"
      },
      "json_schema": {
        "type": "object",
        "properties": {
          "q": {
            "type": "string",
            "description": "Search query"
          }
        },
        "required": [
          "q"
        ]
      }
    },
    {
      "definition": {
        "type": "mcp_server",
        "serverId": "web",
        "toolName": "web_fetch"
      },
      "json_schema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to fetch"
          }
        },
        "required": [
          "url"
        ]
      }
    }
  ],
  "dataSources": [
    {
      "id": "aboutness",
      "description": "Skill context for the agent",
      "content": {
        "type": "text_content",
        "text": "This skill extracts key facts with citations.\nAlways include source URLs when reporting findings.\n"
      }
    }
  ]
}