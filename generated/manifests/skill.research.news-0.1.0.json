{
  "$schema": "./skill_manifest_schema_v2.0.0.json",
  "manifestApiVersion": "v2.0.0",
  "manifestId": "skill.research.news@0.1.0",
  "skillName": "research.news",
  "skillVersion": "0.1.0",
  "description": "Collects topical headlines and supporting web snippets",
  "tags": [
    "research",
    "news"
  ],
  "permissions": {
    "egress": "internet",
    "secrets": []
  },
  "skillDirectives": "Return at least three diverse sources when available.\nInclude source attribution for all headlines.\nPrioritize recent and authoritative sources.\nNote publication dates to establish recency.\n",
  "tools": [
    {
      "definition": {
        "type": "mcp_server",
        "serverId": "search",
        "toolName": "news_headlines"
      },
      "json_schema": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "Topic to fetch headlines for"
          }
        },
        "required": [
          "topic"
        ]
      }
    },
    {
      "definition": {
        "type": "mcp_server",
        "serverId": "web",
        "toolName": "web_fetch"
      },
      "json_schema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to fetch"
          }
        },
        "required": [
          "url"
        ]
      }
    }
  ],
  "dataSources": []
}