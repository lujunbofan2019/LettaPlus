    "analysis": {
      "description": "Research synthesis and analysis tools",
      "tools": {
        "insight_compare": {
          "description": "Mock synthesis tool combining research insights",
          "inputSchema": {
            "type": "object",
            "properties": {
              "insights": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
