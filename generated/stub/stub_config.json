{
  "servers": {
    "search": {
      "tools": {
        "search_query": {
          "version": "0.1.0",
          "description": "Mock web search query tool",
          "paramsSchema": {
            "type": "object",
            "properties": {
              "q": {
                "type": "string",
                "description": "Search query"
              }
            },
            "required": [
              "q"
            ]
          },
          "resultSchema": {
            "type": "object",
            "properties": {
              "hits": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "defaultResponse": {
            "hits": []
          },
          "rateLimit": {
            "rps": 2
          },
          "latencyMs": {
            "default": 150
          },
          "cases": [
            {
              "caseId": "case_python",
              "match": {
                "strategy": "exact",
                "expr": "q",
                "value": "python"
              },
              "response": {
                "hits": [
                  {
                    "title": "Python",
                    "url": "https://www.python.org"
                  }
                ],
                "total": 1
              },
              "latencyMsOverride": null,
              "errorMode": null,
              "weight": null
            }
          ],
          "meta": {
            "originalToolName": "search_query"
          }
        }
      }
    },
    "llm": {
      "tools": {
        "llm_summarize": {
          "version": "0.1.0",
          "description": "Mock summarisation endpoint",
          "paramsSchema": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "description": "Text to summarise"
              }
            },
            "required": [
              "text"
            ]
          },
          "resultSchema": {
            "type": "object",
            "properties": {
              "summary": {
                "type": "string"
              }
            }
          },
          "defaultResponse": {
            "summary": "stub summary"
          },
          "rateLimit": {
            "rps": 0
          },
          "latencyMs": {
            "default": 50
          },
          "cases": [
            {
              "caseId": "short_text",
              "match": {
                "strategy": "regex",
                "expr": "$.text",
                "value": ".*"
              },
              "response": {
                "summary": "short text summary (stub)"
              },
              "latencyMsOverride": null,
              "errorMode": null,
              "weight": null
            }
          ],
          "meta": {
            "originalToolName": "llm_summarize"
          }
        }
      }
    },
    "web": {
      "tools": {
        "web_fetch": {
          "version": "0.1.0",
          "description": "Mock HTTP fetcher",
          "paramsSchema": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "URL to fetch"
              }
            },
            "required": [
              "url"
            ]
          },
          "resultSchema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "integer"
              },
              "body": {
                "type": "string"
              }
            }
          },
          "defaultResponse": {
            "status": 200,
            "body": "stub"
          },
          "rateLimit": {
            "rps": 0
          },
          "latencyMs": {
            "default": 200
          },
          "cases": [
            {
              "caseId": "oops_500",
              "match": {
                "strategy": "regex",
                "expr": "$.url",
                "value": ".*/fail"
              },
              "response": {
                "status": 500,
                "body": ""
              },
              "latencyMsOverride": null,
              "errorMode": "http_500",
              "weight": null
            }
          ],
          "meta": {
            "originalToolName": "web_fetch"
          }
        }
      }
    }
  }
}